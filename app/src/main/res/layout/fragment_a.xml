<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a_bg">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/a_heart_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="45dp" />

        <ImageView
            android:id="@+id/a_cleaner_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="false"
            android:layout_marginBottom="50dp"
            android:layout_toRightOf="@+id/a_heart_btn" />

        <ImageView
            android:id="@+id/a_shi_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/a_heart_btn"
            android:layout_marginRight="45dp" />

        <ImageView
            android:id="@+id/a_dry_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/a_cleaner_btn"
            android:layout_toRightOf="@+id/a_shi_btn" />

    </RelativeLayout>
</FrameLayout>
