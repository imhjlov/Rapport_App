<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s_2_2_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mlinear"
            android:layout_width="328dp"
            android:layout_height="89.3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/s_2_2_bg_order"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/next1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="44.6dp"
                android:layout_height="44.6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/order1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:visibility="visible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/next2"
                android:layout_width="18.45dp"
                android:layout_height="19.95dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/orderset_next" />
            <RelativeLayout
                android:layout_width="44.6dp"
                android:layout_height="44.6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/order2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:visibility="visible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/next3"
                android:layout_width="18.45dp"
                android:layout_height="19.95dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/orderset_next" />

            <RelativeLayout
                android:layout_width="44.6dp"
                android:layout_height="44.6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/order3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:visibility="visible" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/next4"
                android:layout_width="18.45dp"
                android:layout_height="19.95dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/orderset_next" />

            <RelativeLayout
                android:layout_width="44.6dp"
                android:layout_height="44.6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp">

                <ImageView
                    android:id="@+id/order4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:visibility="visible" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/li1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mlinear"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="44.6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/li2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="54.3dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/order_bath"
                    android:layout_width="129.3dp"
                    android:layout_height="129.3dp"
                    android:background="@drawable/s_2_2_bath_btn" />

                <ImageView
                    android:id="@+id/order_lullaby"
                    android:layout_width="129.3dp"
                    android:layout_height="129.3dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/s_2_2_lullaby_btn" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/order_massage"
                    android:layout_width="129.3dp"
                    android:layout_height="129.3dp"
                    android:background="@drawable/s_2_2_massage_btn" />

                <ImageView
                    android:id="@+id/order_book"
                    android:layout_width="129.3dp"
                    android:layout_height="129.3dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/s_2_2_book_btn" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/pattern_end_btn"
            android:layout_width="256.6dp"
            android:layout_height="98dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:background="@drawable/s_2_2_btn" />
    </RelativeLayout>

</FrameLayout>