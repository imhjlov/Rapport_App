<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/s_3_bg" />

    <RelativeLayout
        android:id="@+id/s_3_rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/s_3_ll"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="오후"
                android:textColor="@color/colorMainWhite"
                android:visibility="gone" />

            <com.rapport.rapport_app.Picker.TimePicker
                android:id="@+id/tp_set_rapo_alert"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"></com.rapport.rapport_app.Picker.TimePicker>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/s_3_rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_3_ll"
            android:layout_marginLeft="13.3dp"
            android:layout_marginRight="13.3dp"
            android:layout_marginTop="18dp">

            <LinearLayout
                android:id="@+id/s_3_ll1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="알림 방식"
                    android:textColor="@color/colorMainWhite" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="벨소리"
                    android:textColor="@color/colorMainBlue" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_s_3_bell"
                android:layout_width="16.6dp"
                android:layout_height="14.6dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="false"
                android:layout_toRightOf="@+id/s_3_ll1"
                android:background="@drawable/s_3_detail_btn" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/s_3_rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_3_rl2"
            android:layout_marginLeft="13.3dp"
            android:layout_marginRight="13.3dp"
            android:layout_marginTop="32dp">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="23.3dp"
                android:layout_height="16.6dp"
                android:src="@drawable/s_3_sound_icon"
                android:text="Button" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.6dp"
                android:layout_marginRight="16.6dp"
                android:layout_toRightOf="@+id/imageView10" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/s_3_rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_3_rl3"
            android:layout_marginLeft="13.3dp"
            android:layout_marginRight="13.3dp"
            android:layout_marginTop="28dp">

            <LinearLayout
                android:id="@+id/s_3_ll3"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/s_3_sound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="알림음"
                    android:textColor="@color/colorMainWhite" />

                <TextView
                    android:id="@+id/s_3_soundPick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Good Morning"
                    android:textColor="@color/colorMainBlue" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_set_rapo_alert_set_ringtone"
                android:layout_width="16.6dp"
                android:layout_height="14.6dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="false"
                android:layout_toRightOf="@+id/s_3_ll3"
                android:background="@drawable/s_3_detail_btn" />

        </RelativeLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bt_set_rapo_alert_go_alert"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="97dp"
            android:text="알람음 설정"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bt_set_rapo_alert_go_alert"
            android:layout_width="256.6dp"
            android:layout_height="97.3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/s_3_btn" />
    </RelativeLayout>


</FrameLayout>

